<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/side_width"
        android:orientation="vertical">

        <!--名称-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5.0dip"
                android:text="股票名称"
                android:textColor="@color/color_stock_text"
                android:textSize="@dimen/textsize_first_title" />

            <EditText
                android:id="@+id/add"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:background="@drawable/shurukuang"
                android:text=""
                android:textColor="@color/color_stock_text"
                android:textSize="@dimen/textsize_first_title" />

        </LinearLayout>


        <!--股票代码-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/min_space_width"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5.0dip"
                android:text="股票代码"
                android:textColor="@color/color_stock_text"
                android:textSize="@dimen/textsize_first_title" />

            <EditText
                android:id="@+id/addStockCode"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:background="@drawable/shurukuang"
                android:inputType="number"
                android:text=""
                android:textColor="@color/color_stock_text"
                android:textSize="@dimen/textsize_first_title" />

        </LinearLayout>

        <!--买或者卖-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/min_space_width"
            android:orientation="horizontal">

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/buyRadioBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="买入"
                    android:textColor="@color/color_stock_text"
                    android:textSize="@dimen/textsize_first_title" />

                <RadioButton
                    android:id="@+id/sellRadioBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="卖出"
                    android:textColor="@color/color_stock_text"
                    android:textSize="@dimen/textsize_first_title" />

            </RadioGroup>
        </LinearLayout>

        <!--数量-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/min_space_width"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5.0dip"
                android:text="股票数量"
                android:textColor="@color/color_stock_text"
                android:textSize="@dimen/textsize_first_title" />

            <EditText
                android:id="@+id/addStockNum"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:background="@drawable/shurukuang"
                android:inputType="number"
                android:text=""
                android:textColor="@color/color_stock_text"
                android:textSize="@dimen/textsize_first_title" />

        </LinearLayout>


        <!--价格-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/min_space_width"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5.0dip"
                android:text="股票价格"
                android:textColor="@color/color_stock_text"
                android:textSize="@dimen/textsize_first_title" />

            <EditText
                android:id="@+id/addStockPrice"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:background="@drawable/shurukuang"
                android:inputType="number"
                android:text=""
                android:textColor="@color/color_stock_text"
                android:textSize="@dimen/textsize_first_title" />

        </LinearLayout>


        <!--行业-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/min_space_width"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5.0dip"
                android:text="所属板块"
                android:textColor="@color/color_stock_text"
                android:textSize="@dimen/textsize_first_title" />

            <EditText
                android:id="@+id/addStockType"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:background="@drawable/shurukuang"
                android:text=""
                android:textColor="@color/color_stock_text"
                android:textSize="@dimen/textsize_first_title" />

        </LinearLayout>

        <!--推荐等级-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/min_space_width"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5.0dip"
                android:text="推荐等级"
                android:textColor="@color/color_stock_text"
                android:textSize="@dimen/textsize_first_title" />

            <EditText
                android:id="@+id/addStockRecommendStar"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:background="@drawable/shurukuang"
                android:inputType="number"
                android:text=""
                android:textColor="@color/color_stock_text"
                android:textSize="@dimen/textsize_first_title" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/min_space_width"
            android:orientation="horizontal">

            <Button
                android:id="@+id/addOkBtn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:text="确定"
                android:textColor="@color/color_second_text"
                android:textSize="@dimen/textsize_second_title"
                android:background="@drawable/button_selector"/>

            <Button
                android:id="@+id/addCancelBtn"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.0"
                android:text="取消"
                android:textColor="@color/color_second_text"
                android:textSize="@dimen/textsize_second_title"
                android:background="@drawable/button_selector"/>
        </LinearLayout>
    </LinearLayout>

</ScrollView>