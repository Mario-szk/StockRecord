<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/color_main_content_bg"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/side_width"
        android:orientation="vertical">


        <!--标题-->
        <LinearLayout
            android:id="@+id/stockLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/functionselector"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/stockName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5.0dip"
                android:text="曲美家具"
                android:textColor="@color/color_stock_text"
                android:textSize="@dimen/textsize_first_title" />

            <TextView
                android:id="@+id/stockCode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="603818"
                android:textColor="@color/color_stock_text"
                android:textSize="@dimen/textsize_first_title" />
        </LinearLayout>


        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10.0dip">
            <!-- 左侧内容-->
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/leftRow1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/newPriceText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/min_space_width"
                            android:text="现       价"
                            android:textColor="@color/color_gray_text"
                            android:textSize="@dimen/textsize_second_title" />

                        <TextView
                            android:id="@+id/newPrice"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="111111"
                            android:textSize="@dimen/textsize_second_title" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/leftRow2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/positionNumText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/min_space_width"
                            android:text="持仓数量"
                            android:textColor="@color/color_gray_text"
                            android:textSize="@dimen/textsize_second_title" />

                        <TextView
                            android:id="@+id/positionNum"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="111111"
                            android:textColor="@color/color_first_text"
                            android:textSize="@dimen/textsize_second_title" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/typeText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/min_space_width"
                            android:text="所属板块"
                            android:textColor="@color/color_gray_text"
                            android:textSize="@dimen/textsize_second_title" />

                        <TextView
                            android:id="@+id/typeValue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="111111"
                            android:textColor="@color/color_first_text"
                            android:textSize="@dimen/textsize_second_title" />
                    </LinearLayout>
                </LinearLayout>
            </RelativeLayout>

            <!--右侧内容-->
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">


                    <LinearLayout
                        android:id="@+id/rightRow2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/stockCostText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/min_space_width"
                            android:text="平均成本"
                            android:textColor="@color/color_gray_text"
                            android:textSize="@dimen/textsize_second_title" />

                        <TextView
                            android:id="@+id/stockCost"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@id/stockCostText"
                            android:text="111111"
                            android:textColor="@color/color_first_text"
                            android:textSize="@dimen/textsize_second_title" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/rightRow1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/profitValueText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/min_space_width"
                            android:text="盈亏比例"
                            android:textColor="@color/color_gray_text"
                            android:textSize="@dimen/textsize_second_title" />

                        <TextView
                            android:id="@+id/profitValue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@id/profitValueText"
                            android:text="111111"
                            android:textSize="@dimen/textsize_second_title" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/recommendStarText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/min_space_width"
                            android:text="推荐星级"
                            android:textColor="@color/color_gray_text"
                            android:textSize="@dimen/textsize_second_title" />

                        <TextView
                            android:id="@+id/recommendStar"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="111111"
                            android:textColor="@color/color_first_text"
                            android:textSize="@dimen/textsize_second_title" />
                    </LinearLayout>
                </LinearLayout>
            </RelativeLayout>

        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/green"
            android:layout_marginTop="5.0dip"
            android:id="@+id/oneword_des_txtview"
            android:textSize="@dimen/textsize_second_title"
            android:text="股票可以买入，做波段操作"
            android:ellipsize="end"/>

    </LinearLayout>

    <!--分割线-->
    <View
        android:layout_width="fill_parent"
        android:layout_height="1.0px"
        android:background="@color/color_new_line" />
    <!--按钮-->
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="40.0dip"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/detailsBtn"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1.0"
            android:background="@drawable/functionselector">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="成交明细"
                android:textColor="@color/color_second_text"
                android:textSize="@dimen/textsize_second_title" />
        </RelativeLayout>

        <View
            android:layout_width="1.0px"
            android:layout_height="fill_parent"
            android:layout_marginBottom="5.0dip"
            android:layout_marginTop="5.0dip"
            android:background="@color/color_new_line" />

        <RelativeLayout
            android:id="@+id/editBtn"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1.0"
            android:background="@drawable/functionselector">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="编辑"
                android:textColor="@color/color_second_text"
                android:textSize="@dimen/textsize_second_title" />
        </RelativeLayout>

    </LinearLayout>

    <!--分割线-->
    <View
        android:id="@+id/spaceLine"
        android:layout_width="fill_parent"
        android:layout_height="5.0dip"
        android:background="@color/color_main_bg" />
</LinearLayout>